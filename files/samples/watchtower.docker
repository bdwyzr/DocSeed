##############
# Watchtower #
##############

   watchtower:
    image: v2tec/watchtower
    container_name: watchtower
    hostname: watchtower
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /etc/localtime:/etc/localtime:ro
    restart: always
    environment:
      - TZ=Europe/Paris

