#############
# Ubooquity #
#############

   ubooquity:
    restart: always
    image: zerpex/ubooquity-docker
    container_name: stream-comics_ubooquity
    hostname: library
    volumes:
      - LIBRARY:/media:ro
      - CONF/ubooquity/conf:/config:rw
      - /etc/localtime:/etc/localtime:ro
    environment:
      - UID=1069
      - GID=1069
      - TZ=Europe/Paris
    ports:
      - "5003:2202"
      - "2502":"2502"
