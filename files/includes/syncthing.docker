#############
# Syncthing #
#############

   syncthing:
    image: linuxserver/syncthing
    container_name: tool-syncro_Syncthing
    environment:
      - WEBROOT=/rutorrent
      - PUID=1000
      - PGID=1000
    ports:
      - "5550:8384"
      - "22000:22000"
      - "21027:21027/udp"
    volumes:
      - INCOMING:/data/incoming
      - MEDIA:/data/media
      - CONF/syncthings/conf:/config
